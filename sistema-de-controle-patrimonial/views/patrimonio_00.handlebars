{{!< main}}
<div class="cab">
    <h1 class="col-6 offset-3 text-center" id="t1">Controle de Patrimônio AFFEMG</h1>
    <h3 class="col-6 offset-3 text-center" id="t1">Editar Patrimônio</h3>
</div>
<div class="container mt-5 col-3 offset-1">
    <div class="text-center my-3">
        <acronym title="Click para Buscar Patimônio">
            <button id="btnMostrarBusca_00" class="btn btn-outline-secondary">
                🔍
            </button>
        </acronym>
        <input type="text" id="campoBusca_00" class="form-control d-none mt-2 col-4 offset-4" placeholder="Digite o número do patrimônio..." autocomplete="on">
        <button id="btnBuscarPatrimonio_00" class="btn btn-primary mt-2 d-none">Buscar Patrimônio</button>
    </div>
</div>
{{!--Rota ('/patrimonio_00_00')Para controle de patrimônio andar -2 --}}
<main class="container mt-4">
    <div class="container mt-4">
        <form action="/cadastrar_00" method="post" id="formPatrimonio">
             <div class="form-group mt-4">
                <input type="text" class="form-control" name="andar_00" id="andar_00" placeholder="Digite o andar" required>
                <input type="text" class="form-control" name="patrimonio_00" id="patrimonio_00" placeholder="N° de Patrimônio" required>
                <input type="text" class="form-control" name="empresa_00" id="empresa_00" placeholder="Empresa" autocomplete="name" required>
                <input type="text" class="form-control" name="nome_00" id="nome_00" placeholder="Nome" required>
                <input type="text" class="form-control" name="setor_00" id="setor_00" placeholder="setor" required><br>
                {{!--<input type="date" class="form-control" name="data" id="idata">--}}
                <label class="form-control" name="data_00" id="data_00">Preenchimento de data Automática</label>
                <input type="text" class="form-control" name="descricao_00" id="descricao_00" maxlength="200" placeholder="Digite a descrição do Patrimônio..." required>
                 <label>Escolha o Destino:</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_00" id="affemg_00" value="Em Uso" checked>
                <label class="form-check-label" for="affemg">Em uso</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_00" id="fundaffemg_00" value="Realocado">
                <label class="form-check-label" for="fundaffemg">Realocado</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_00" id="fisco_00" value="Uso Indefinido">
                <label class="form-check-label" for="fisco">Uso Indefinido</label>
            </div>  
                <input type="submit" class="btn btn-primary" value="Cadastrar"  id="salvar_00">
                <a class="btn btn-outline-primary" href="/">Voltar</a>
                  <button id="btnSalvarPdf_00" class="btn btn-danger">Salvar em PDF</button>
            </form>
            </div>
        </div>  
    </form>
    </div>
    {{!-- Pedidos salvos--}}
    <div class="container">
        <div class="row">
            {{#each patrimonio_00}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <div class="texto">
                            <p>Andar: {{andar_00}}</p>
                            <p>N° do Patrimônio: {{Npatrimonio_00}}</p>
                            <p>Empresa: {{empresa_00}}</p>
                            <p>Nome: {{nome_00}}</p>
                            <p>Setor: {{setor_00}}</p>
                            <p>data: {{formatDate data_00}}</p>
                            <p>Descrição: {{descricao_00}}</p>
                            <p>Destino: {{destino_00}} </p>
                        </div>
                       <a href="/patrimonioEditar/{{id}}" class="btn btn-outline-warning">Editar</a>
                        <a class="btn btn-outline-danger" href="/excluir_00/{{id}}">Excluir</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </form>
    </div>
</main>
<script src="/js/patrimonio_00.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>