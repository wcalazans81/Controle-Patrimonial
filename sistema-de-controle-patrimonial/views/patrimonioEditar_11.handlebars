{{!< main}}  
<div class="cab">
    <h1 class="col-6 offset-3 text-center" id="t1">Controle de Patrimônio AFFEMG</h1>
    <h3 class="col-6 offset-3 text-center" id="t1">Editar Patrimônio</h3>
</div>
{{!--Rota ('/patrimonio_11')Para controle de patrimônio andar 10º --}}

<main class="container mt-5">
    <div class="container mt-4">
       <form action="/patrimonioAtualizar_11/{{patrimonio.id}}" method="post" id="formPatrimonio">
        <div class="form-group mt-4">
        <input type="text" class="form-control" name="andar_11" id="andar_11" placeholder="Digite o andar" value="{{patrimonio.andar_11}}" readonly>
        <input type="text" class="form-control" name="patrimonio_11" id="patrimonio_11" placeholder="N° de Patrimônio" value="{{patrimonio.Npatrimonio_11}}" readonly>
        <input type="text" class="form-control" name="empresa_11" id="empresa_11" placeholder="Empresa" value="{{patrimonio.empresa_11}}" readonly>
        <input type="text" class="form-control" name="nome_11" id="nome_11" placeholder="Nome" value="{{patrimonio.nome_11}}" required>
        <input type="text" class="form-control" name="setor_11" id="setor_11" placeholder="setor" value="{{patrimonio.setor_11}}" required><br>
        <label class="form-control">Data: {{formatDate patrimonio.data_11}}</label>
        <input type="text" class="form-control" name="descricao_11" id="descricao_11" maxlength="200" placeholder="Digite a descrição do Patrimônio..." value="{{patrimonio.descricao_11}}" required>
              <label>Escolha o Destino:</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_11" id="affemg_11" value="Em Uso" checked>
                <label class="form-check-label" for="affemg">Em uso</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_11" id="fundaffemg_11" value="Realocado">
                <label class="form-check-label" for="fundaffemg">Realocado</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_11" id="fisco_11" value="Uso Indefinido">
                <label class="form-check-label" for="fisco">Uso Indefinido</label>
            </div>  
                <input type="submit" class="btn btn-primary" value="Cadastrar/Salvar" id="salvar_11">
                <a class="btn btn-outline-primary" href="/patrimonio_11">Voltar</a>
            </div>
    </form>

    <div class="container">
        <div class="row">
            {{#each patrimonio_11}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <div class="texto">
                            <p>Andar: {{andar_11}}</p>
                            <p>N° do Patrimônio: {{Npatrimonio_11}}</p>
                            <p>Empresa: {{empresa_11}}</p>
                            <p>Nome: {{nome_11}}</p>
                            <p>Setor: {{setor_11}}</p>
                            <p>Data: {{formatDate data_11}}</p>
                            <p>Descrição: {{descricao_11}}</p>
                            <p>Destino: {{destino_11}}</p>
                        </div>
                    <a href="/patrimonioEditar_11/{{id}}" class="btn btn-warning">Editar</a>
                        <a href="/#/{{id}}" class="btn btn-warning">Doado</a>
                        <a class="btn btn-danger" href="/#/{{id}}">Descartado</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
<script src="/js/patrimonioEditar_11.js"></script>
