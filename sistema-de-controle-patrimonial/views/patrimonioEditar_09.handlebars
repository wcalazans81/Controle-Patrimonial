{{!< main}}  
<div class="cab">
    <h1 class="col-6 offset-3 text-center" id="t1">Controle de Patrimônio AFFEMG</h1>
    <h3 class="col-6 offset-3 text-center" id="t1">Editar Patrimônio</h3>
</div>
{{!--Rota ('/patrimonio_09')Para controle de patrimônio andar 8º --}}

<main class="container mt-5">
    <div class="container mt-4">
       <form action="/patrimonioAtualizar_09/{{patrimonio.id}}" method="post" id="formPatrimonio">
        <div class="form-group mt-4">
        <input type="text" class="form-control" name="andar_09" id="andar_09" placeholder="Digite o andar" value="{{patrimonio.andar_09}}" readonly>
        <input type="text" class="form-control" name="patrimonio_09" id="patrimonio_09" placeholder="N° de Patrimônio" value="{{patrimonio.Npatrimonio_09}}" readonly>
        <input type="text" class="form-control" name="empresa_09" id="empresa_09" placeholder="Empresa" value="{{patrimonio.empresa_09}}" readonly>
        <input type="text" class="form-control" name="nome_09" id="nome_09" placeholder="Nome" value="{{patrimonio.nome_09}}" required>
        <input type="text" class="form-control" name="setor_09" id="setor_09" placeholder="setor" value="{{patrimonio.setor_09}}" required><br>
        <label class="form-control">Data: {{formatDate patrimonio.data_09}}</label>
        <input type="text" class="form-control" name="descricao_09" id="descricao_09" maxlength="200" placeholder="Digite a descrição do Patrimônio..." value="{{patrimonio.descricao_09}}" required>
              <label>Escolha o Destino:</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_09" id="affemg_09" value="Em Uso" checked>
                <label class="form-check-label" for="affemg">Em uso</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_09" id="fundaffemg_09" value="Realocado">
                <label class="form-check-label" for="fundaffemg">Realocado</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_09" id="fisco_09" value="Uso Indefinido">
                <label class="form-check-label" for="fisco">Uso Indefinido</label>
            </div>  
                <input type="submit" class="btn btn-primary" value="Cadastrar/Salvar" id="salvar_09">
                <a class="btn btn-outline-primary" href="/patrimonio_09">Voltar</a>
            </div>
    </form>

    <div class="container">
        <div class="row">
            {{#each patrimonio_09}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <div class="texto">
                            <p>Andar: {{andar_09}}</p>
                            <p>N° do Patrimônio: {{Npatrimonio_09}}</p>
                            <p>Empresa: {{empresa_09}}</p>
                            <p>Nome: {{nome_09}}</p>
                            <p>Setor: {{setor_09}}</p>
                            <p>Data: {{formatDate data_09}}</p>
                            <p>Descrição: {{descricao_09}}</p>
                            <p>Destino: {{destino_09}}</p>
                        </div>
                    <a href="/patrimonioEditar_09/{{id}}" class="btn btn-warning">Editar</a>
                        <a href="/#/{{id}}" class="btn btn-warning">Doado</a>
                        <a class="btn btn-danger" href="/#/{{id}}">Descartado</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
<script src="/js/patrimonioEditar_09.js"></script>
