{{!< main}}  
<div class="cab">
    <h1 class="col-6 offset-3 text-center" id="t1">Controle de Patrimônio AFFEMG</h1>
    <h3 class="col-6 offset-3 text-center" id="t1">Editar Patrimônio</h3>
</div>
{{!--Rota ('/patrimonio_02')Para controle de patrimônio andar -1 --}}
<main class="container mt-5">
    <div class="container mt-4">
       <form action="/patrimonioAtualizar_02/{{patrimonio.id}}" method="post" id="formPatrimonio">
        <div class="form-group mt-4">
        <input type="text" class="form-control" name="andar_02" id="andar_02" placeholder="Digite o andar" value="{{patrimonio.andar_02}}" readonly>
        <input type="text" class="form-control" name="patrimonio_02" id="patrimonio_02" placeholder="N° de Patrimônio" value="{{patrimonio.Npatrimonio_02}}" readonly>
        <input type="text" class="form-control" name="empresa_02" id="empresa_02" placeholder="Empresa" value="{{patrimonio.empresa_02}}" readonly>
        <input type="text" class="form-control" name="nome_02" id="nome_02" placeholder="Nome" value="{{patrimonio.nome_02}}" required>
        <input type="text" class="form-control" name="setor_02" id="setor_02" placeholder="setor" value="{{patrimonio.setor_02}}" required><br>
        <label class="form-control">Data: {{formatDate patrimonio.data_02}}</label>
        <input type="text" class="form-control" name="descricao_02" id="descricao_02" maxlength="200" placeholder="Digite a descrição do Patrimônio..." value="{{patrimonio.descricao_02}}" required>
              <label>Escolha o Destino:</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_02" id="affemg_02" value="Em Uso" checked>
                <label class="form-check-label" for="affemg">Em uso</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_02" id="fundaffemg_02" value="Realocado">
                <label class="form-check-label" for="fundaffemg">Realocado</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="destino_02" id="fisco_02" value="Uso Indefinido">
                <label class="form-check-label" for="fisco">Uso Indefinido</label>
            </div>  
                <input type="submit" class="btn btn-primary" value="Cadastrar/Salvar" id="salvar_02">
                <a class="btn btn-outline-primary" href="/patrimonio_02">Voltar</a>
            </div>
    </form>

    <div class="container">
        <div class="row">
            {{#each patrimonio_02}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <div class="texto">
                            <p>Andar: {{andar_02}}</p>
                            <p>N° do Patrimônio: {{Npatrimonio_02}}</p>
                            <p>Empresa: {{empresa_02}}</p>
                            <p>Nome: {{nome_02}}</p>
                            <p>Setor: {{setor_02}}</p>
                            <p>Data: {{formatDate data_02}}</p>
                            <p>Descrição: {{descricao_02}}</p>
                            <p>Destino: {{destino_02}}</p>
                        </div>
                    <a href="/patrimonioEditar_02/{{id}}" class="btn btn-warning">Editar</a>
                        <a href="/#/{{id}}" class="btn btn-warning">Doado</a>
                        <a class="btn btn-danger" href="/#/{{id}}">Descartado</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
<script src="/js/patrimonioEditar_02.js"></script>
